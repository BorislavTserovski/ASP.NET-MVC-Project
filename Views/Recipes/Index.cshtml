@model IEnumerable<MVCBlog.Models.Recipe>

@{
    ViewBag.Title = "Index";
}

<h2 class="Recipes">Recipes</h2>
<p>
    @using (Html.BeginForm("Index","Home", FormMethod.Get))
    {
    <b>Search by: </b>@Html.RadioButton("Searchby", "Name",true)<text> Name</text>
    @Html.RadioButton("Searchby", "Ingredients") <text>Ingredients</text><br/>
    @Html.TextBox("search")<input type="submit" value="Search"/>
    }
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
